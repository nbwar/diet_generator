=content_for :title, "Diet"

= form_tag do
  = label_tag 'goal', 'Goal:'
  - ['muscle', 'maintenance', 'weightloss'].each do |goal|
    = radio_button_tag 'goal', goal, @goal == goal
    = label_tag "goal_#{goal}", goal.humanize
  %br/
  = label_tag 'gender', 'Gender:'
  - ['male', 'female'].each do |gender|
    = radio_button_tag 'gender', gender, @gender == gender
    = label_tag "gender_#{gender}", gender.humanize
  %br/
  = label_tag 'height', 'Height:'
  = text_field_tag 'feet'
  ft
  = text_field_tag 'inches'
  in
  %br/
  = label_tag 'weight', 'Weight:'
  = text_field_tag 'weight'
  lbs
  %br/
  = label_tag 'age', 'Age:'
  = text_field_tag 'age'
  %br/
  = label_tag 'bf', 'Bodyfat:'
  - ['low', 'medium', 'high'].each do |bf|
    = radio_button_tag 'bf', bf, @bf == bf
    = label_tag "bf_#{bf}", bf.humanize
  %br/
  = label_tag 'activity', 'Activity:'



  / %span
  /   Build Muscle
  / = radio_button_tag 'goal', 'muscle'
  / %span
  /   Maintenance
  / = radio_button_tag 'goal', 'maintenance'
  / %span
  /   Loose Weight
  / = radio_button_tag 'goal', 'weightloss'

